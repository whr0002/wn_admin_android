<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reclamation.woodlands.admin" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCf9SvIgMAzkRuy7rwStsK2I_xE_-Xws0I" />

        <activity
            android:name="com.reclamation.woodlands.admin.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity android:name="com.reclamation.woodlands.admin.Activity.SiteVisitActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden"></activity>

        <activity
            android:name="com.reclamation.woodlands.admin.Activity.SiteVisitDetailActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden"></activity>

        <activity android:name="com.reclamation.woodlands.admin.Activity.DrawingActivity"></activity>

        <activity android:name="com.reclamation.woodlands.admin.Activity.SitePrepActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name="com.reclamation.woodlands.admin.Activity.SitePrepDetailActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".Activity.TimesheetsActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".Activity.TimesheetDetailActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden"></activity>

    </application>

</manifest>
